[Unit]
Description=uvicorn service
After=network.target

[Service]
User=deploy
Group=deploy
WorkingDirectory=/srv/deploy-prj
ExecStart=/home/ubuntu/.pyenv/versions/gunicorn/bin/gunicorn --bind unix:/tmp/uvicorn.sock config.asgi:application -w 4 -k uvicorn.workers.UvicornWorker --access-logfile /var/log/uvicorn/access.log --error-logfile /var/log/uvicorn/error.log --access-logformat --access-logfile /var/log/uvicorn/access.log --error-logfile /var/log/uvicorn/error.log --log-level info
#ExecStart=/home/ubuntu/.pyenv/versions/gunicorn/bin/gunicorn -c /srv/deploy-prj/.config/uvicorn/config.py config.asgi:application
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
[Install]
WantedBy=multi-user.target